# Social Media Automation Configuration
# Copy this file to .env and fill in your credentials

# Facebook/Threads Credentials
# Get these from https://developers.facebook.com
FB_APP_ID=your_facebook_app_id_here
FB_APP_SECRET=your_facebook_app_secret_here
FB_PAGE_ID=your_facebook_page_id_here
FB_PAGE_TOKEN=your_permanent_page_access_token_here

# Instagram Credentials (optional - requires Facebook Business integration)
IG_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id
IG_ACCESS_TOKEN=your_instagram_access_token_or_use_fb_page_token

# Repository Configuration
GITHUB_REPO=Ok-landscape/computational-pipeline
COCALC_BASE_URL=https://cocalc.com/github/Ok-landscape/computational-pipeline

# Template Directory (usually don't need to change)
TEMPLATES_DIR=/home/user/latex-templates/templates

# Optional: Logging Configuration
LOG_LEVEL=INFO
